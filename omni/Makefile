
FILES :=\
	LibSepVar \
	LibSepFmap \
	Syntax \
	Hprop \
	Small \
	Big \
	OmniSmall \
	OmniBig \
	EquivSmallBig \
	EquivOmni \
	SepLogicCommon \
	SepLogicSmall \
	SepLogicOmniBig \
	SepLogicOmniSmall


VFILES=$(FILES:=.v)


############################################################################
# Compilation using the Makefile generated by coq_makefile.

# The desired warnings are set in _CoqProject.

-include Makefile.generated

Makefile.generated:
	@ $(COQBIN)coq_makefile -f _CoqProject $(VFILES) -o $@


############################################################################
# Clean rules

.PHONY: clean

clean::
	@ rm -f Makefile.generated Makefile.generated.conf
	@ rm -rf .lia.cache
	@ rm -rf *.v.d .*.aux

